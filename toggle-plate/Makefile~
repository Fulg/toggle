CC=gcc
C_INCLUDES=`pkg-config --cflags gobject-2.0 clutter-1.0`
CFLAGS=$(C_INCLUDES) -g
LIBS=`pkg-config --libs gobject-2.0 clutter-1.0`
LIBDIR=/usr/lib

OBJECTS=clutterplate.lo
SOURCES=clutter-plate.c clutter-plate.h 

NAMESPACE=ClutterPlate
NSVERSION=0.1
GIR_FILE=$(NAMESPACE)-$(NSVERSION).gir
TYPELIB_FILE=$(NAMESPACE)-$(NSVERSION).typelib

all: libclutterplate.la $(TYPELIB_FILE)

libclutterplate.la: $(OBJECTS)	
	libtool link $(CC) $(LIBS) -rpath $(LIBDIR) $(OBJECTS) -o $@ 

$(TYPELIB_FILE): $(GIR_FILE)
	g-ir-compiler --warn-all $(GIR_FILE) --output=$(TYPELIB_FILE)

$(GIR_FILE): $(SOURCES)
	libtool exec g-ir-scanner --warn-all $^ --library=libclutterplate.la $(C_INCLUDES) --include=GObject-2.0 --namespace=$(NAMESPACE) --nsversion=$(NSVERSION) --output=$@

clutterplate.lo: $(SOURCES)
	libtool compile $(CC) $(CFLAGS) -c $< -o $@

clean:
	-rm *.lo libclutterplate.la $(TYPELIB_FILE) $(GIR_FILE)
	-rm -rf .libs


