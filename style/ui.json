[
  {
    "id" : "stage",
    "type" : "ClutterStage",
    "width" : 800,
    "height" : 480,
    "children" : [ "box" ],
    "signals" : []
  },
  {
    "id" : "box",
    "type" : "ClutterBox",
    "width" : 800,
    "height" : 480,
	"color": "#FFF",

    "layout-manager" : { "type" : "ClutterFixedLayout" },
    "children" : 
    [
        {
            "id": "volume-viewport",     
            "type" : "ClutterActor",
            "background-color" : "#FFF",
            "width" : 800,
            "height" : 420,
            "x": 0, 
            "y": 60, 
            "layout-manager" : { "type" : "ClutterFixedLayout" },
            "children" : 
            [
                {
                    "id" : "volume-stage",
                    "type" : "ClutterActor",
                    "width": 800, 
                    "height": 420,
                    "children" : 
                    [
                        {
                            "id": "plate", 
                            "type" : "ToggleModel",    
                            "scale-x": 400.0,
                            "scale-y": 400.0,
                            "scale-z": 400.0,   
                            "rotation-angle-x": 90.0,
                            "rotation-angle-y": -90.0,
                            "pivot-point": [0.5, 0.5],
                            "pivot-point-z": 0.5,
                            "x": 400,
                            "width": 1, 
                            "height": 1,
                            "depth": 1
                        }, 
                        {
                            "id": "model", 
                            "type" : "ToggleModel",    
                            "scale-x": 80.0,
                            "scale-y": 80.0,
                            "scale-z": 80.0,   
                            "width": 1, 
                            "rotation-angle-x": 90.0,
                            "rotation-angle-y": 180.0,
                            "pivot-point": [0.5, 0.5],
                            "pivot-point-z": 0.5,
                            "x": 400,
                            "y": 212,
                            "height": 1,
                            "depth": 1
                        }    
                    ]    
                }
            ]       
          },
	    {
		    "id": "btn-print", 
		    "type": "MxButton", 
		    "label": "Print",
            "style-class": "main",
		    "x": 350, 
		    "y": 15	
	    }, 

	    {
		    "id": "btn-next", 
		    "type": "MxButton", 
		    "label": ">>",
            "style-class": "main",
		    "x": 700, 
		    "y": 15	
	    }, 
        {
            "id": "btn-prev", 
            "type": "MxButton",
            "label": "<<", 
            "style-class": "main",
            "x": 20, 
            "y": 15
        }
        {
            "id": "msg", 
            "type" : "ClutterBox",
            "width" : 800,
            "height" : 280,
            "color": "#000",
            "x": 0, 
            "y": 100,
            "opacity" : 0,
            "layout-manager" : { "type" : "ClutterFixedLayout" }, 
            "children" : [ {
                "id": "txt", 
                "type": "ClutterText",
                "font-description": "Sans 48",
                "color": "#FFF",
                "height": 280, 
                "y": 100
            } ]
        }
    ]
  }
]

